extends layout/layout

block vars
	include ./templates/mixins/m-hero
	include ./templates/mixins/m-text-media
	include ./templates/mixins/m-title
	include ./templates/mixins/m-product-section
	include ./templates/mixins/m-img-row
	include ./templates/mixins/m-dropdown
	include ./templates/mixins/m-slider-certificate
	include ./templates/mixins/m-banner-block
	- array = {body_class:'', title_inner:'Leodar'}
block content_block
	+hero({
		img: 'hero_4.jpg',
		img_media: 580,
		img_mob: 'hero_4_mob.jpg',
	})
	+text_media({
		main_title: 'Торговая марка',
		main_title_logo: 'leodar_logo.png',
		title: 'RS Success Agro основан в 2019 году путем привлечения инвестиций со стороны Industrial Innovation Group.',
		descr: 'Industrial Innovation Group входит в ТОП-3 самых крупных иностранных инвесторов ОАЭ в Узбекистане. В рамках сотрудничества построен агрокомплекс для полной переработки сырья из технической конопли, не имеющий аналогов в мире.',
		video: '/images/green_world.mov',
		on_media_img: 'leodar_world.png',
		on_media_text: 'Торговая марка Leodar® зарегистрирована в 70 ведущих странах мира, включая все страны Европейского Союза и Великобританию, и представлена на всех континентах.',
	})
	+text_media({
		subtitle: 'Готовая бутылка из изящного итальянского стекла украшается одновременно с двух сторон этикетками и голограммой на колпачке.',
		descr: '<p>Эффектное оформление бутылки конопляного масла Leodar® помогает отразить преимущества продукта и его ценность, подчеркивая уникальность и отличие от альтернативных предложений.</p><p>После завершения оформления емкости происходит безопасная транспортировка готовой продукции с обязательным контролем веса.</p>',
		img: 'images/text-media/text_media_3.jpg'
	}, 'text_media--row_mod')
	include ./blocks/animate-product
	+text_media({
		title: 'Масло Leodar® надежно защищено от подделки, что гарантирует потребителю продукт наивысшей пробы и качества.',
		subtitle: 'Уникальная ультрасовременная электронная этикетка, аналогов которой нет в мире, позволяет отследить весь этап производства – от закладки семечка в почву до полки магазина. ',
	})
	+img_row([
		'img_row_1.jpg',
		'img_row_2.jpg',
		'img_row_3.jpg',
	])
	+dropdown({
		img: 'dropdown_label_1.png',
		title: 'Круглый голографический елемент',
		list: [
			{
				title: 'Форма и размер элемента:',
				descr: 'круг диаметром 22 мм',
			},
			{
				title: 'Трехцветный логотип',
				descr: 'с независимыми кинетическими эффектами в отдельных элементах',
			},
			{
				title: 'Технология записи голограммы:',
				descr: 'Электронно-лучевая литография',
			},
			{
				title: 'Радужный кинетический эффект пульсации',
				descr: 'в элементах текстуры фона',
			},
			{
				title: 'Разрешение голографического изображения',
				descr: '5 мкм',
			},
			{
				title: 'Высокочастотный дифракционный контур',
				descr: 'толщиной 15 мкм, собирающий воедино элементы логотипа',
