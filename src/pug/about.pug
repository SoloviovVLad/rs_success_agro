extends layout/layout

block vars
	include ./templates/mixins/m-hero
	include ./templates/mixins/m-text-media
	include ./templates/mixins/m-title
	include ./templates/mixins/m-banner-block
	include ./templates/mixins/m-items-icons
	include ./templates/mixins/m-certificate-full
	include ./templates/mixins/m-image-grid
	- array = {body_class:'', title_inner:'About'}

block content_block
	+hero({
		img: 'hero_1.jpg'
	})
	+text_media({
		main_title: 'о компании',
		title: 'RS Success Agro основан в 2019 году путем привлечения инвестиций со стороны Industrial Innovation Group.',
		descr: 'Industrial Innovation Group входит в ТОП-3 самых крупных иностранных инвесторов ОАЭ в Узбекистане. В рамках сотрудничества построен агрокомплекс для полной переработки сырья из технической конопли, не имеющий аналогов в мире.',
		img: 'images/text_center.jpg'
	})
	+text_media({
		subtitle: 'RS Success Agro обладает полным спектром уникальных интеллектуальных технологий и ультрасовременной техники, что позволяет совершить инновационное аграрное чудо в рамках одного комплекса. ',
		video: 'images/text-media/text_video_1.mov'
	}, 'text_media--row_mod')
	+banner_block({
		mod: 'banner_block--content_mod',
		img: 'images/banner/banner_3.png',
		title: 'Единственный в мире',
		descr: '<p>Применение уникальных передовых технологий выводит сельскохозяйственный сектор Узбекистана на новый инновационный уровень. RS Success Agro сделал прогрессивный шаг в диверсификации продукции узбекского сельского хозяйства, возрождая вековые традиции коноплеводства.</p><p>Глобальный биотехнологический агрокомплекс в Узбекистанееще долгое время будет единственным в мире научно-агропромышленным объединением замкнутого цикла, основанном на самых последних технологических разработках – от поля до продукции в магазине.</p>',
	})
	include ./blocks/goals
	+items_icons([
		{
			img: 'icon_1.png',
			title: 'Устойчивая деловая репутация',
			descr: 'Мы ответственно относимся к своему лидерству на рынке и его влиянию, которое оказываем на страну, людей и компании. Мы создаем интеллектуальный переворот в агросекторе Узбекистана, формируем деловую культуру ведения национального бизнеса глобального масштаба. Несем ответственность за взятые обязательства, качественно выполняем условия контактов. Мы решительно защищаем репутацию компании, отстаиваем интересы законными профессиональными способами. '
		},
		{
			img: 'icon_2.png',
			title: 'Уважение к окружающей среде',
			descr: 'Переходя на более благоприятную для природы и справедливую для сельского хозяйства деятельность, мы улучшаем условия жизни, сокращая выбросы и использование агрохимикатов, защищая и возобновляя экосистемы. На всех производственных этапах мы минимизируем использование энергоресурсов, бережно обрабатываем землю и тщательно контролируем качество нашей продукции. '
		},
